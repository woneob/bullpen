<%
  layout('./layouts/default');
%>

<div id="articleList">
  <ul id="list">
    <% items.array.forEach(function($t, i) { %>
      <li>
        <a href="<%- '/article/' + $t.articleId %>">
          <%= $t.subject %>
          <span class="comment"><%= $t.commentCount || '' %></span>
        </a>
        <div class="meta">
          <%= $t.num %>
          <%= $t.author %>(<%= $t.userId %>)
          <%= $t.date %>
          <%= $t.views %>
        </div>
      </li>
    <% }) %>
  </ul>
  <button id="loadMore" type="button" data-lastid="<%= items.lastid %>">load more</button>
</div>
